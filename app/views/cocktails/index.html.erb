<h1>Cocktails#index</h1>

<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(https://source.unsplash.com/collection/962396/<%= cocktail.id %>)">
      <%= cocktail.name %>
    </div>
  <% end %>
</div>

